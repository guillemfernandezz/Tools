{
  // --- 1. INTERFAZ (Workbench) ---
  "workbench.sideBar.location": "right",
  "workbench.colorCustomizations": {
    "[GitHub Dark]": {
      "editor.background": "#2c2c2c",
      "sideBar.background": "#252526",
      "activityBar.background": "#1e1e1e",
      "statusBar.background": "#007acc",
      "editorCursor.foreground": "#ffffff",
      "editor.lineHighlightBackground": "#3a3a3a"
    }
  },

  // --- 2. ACTIVAR PODERES SEMÁNTICOS ---
  "editor.semanticHighlighting.enabled": true,

  // --- 3. REGLAS SEMÁNTICAS ESPECÍFICAS PARA GITHUB DARK ---
  // Aquí es donde forzamos que arcpy y las variables tengan color
  "editor.semanticTokenColors": {
    "[GitHub Dark]": {
      "variable": "#e5c07b",           // Variables -> Amarillo Ocre
      "variable.declaration": "#e5c07b",
      "variable.readonly": "#e5c07b",
      "parameter": "#e5c07b",
      "property": "#e5c07b",
      
      "namespace": "#56b6c2",          // arcpy / os -> Turquesa
      "module": "#56b6c2",             // Librerías -> Turquesa
      "class": "#56b6c2",
      
      "function": "#61afef",           // Funciones -> Azul
      "method": "#61afef",
      
      "string": "#29c05b",             // Strings -> Verde
      "number": "#d19a66"
    }
  },

  // --- 4. REGLAS DE SINTAXIS (TextMate - El respaldo) ---
  "editor.tokenColorCustomizations": {
    "[GitHub Dark]": {
      "textMateRules": [
        {
          "scope": "comment",
          "settings": {
            "foreground": "#959da5",
            "fontStyle": "underline"
          }
        },
        // A. REGLA PARA LA 'r' y 'f' (PREFIJOS)
        {
          "scope": ["storage.type.string", "keyword", "storage.type", "storage.modifier"],
          "settings": {
            "foreground": "#c678dd", // Morado
            "fontStyle": ""
          }
        },
        // B. REGLA PARA EL CONTENIDO DEL STRING
        {
          "scope": ["string", "string.quoted", "constant.character.escape"],
          "settings": {
            "foreground": "#29c05b", // Verde
            "fontStyle": ""          // Sin negrita
          }
        },
        // C. REGLA DE RESPALDO PARA VARIABLES (Por si falla lo semántico)
        {
          "scope": ["variable", "variable.other", "variable.language", "meta.variable"],
          "settings": {
            "foreground": "#b3cdfe"
          }
        },
        // D. REGLA DE RESPALDO PARA IMPORTS (arcpy)
        {
           "scope": ["variable.other.readwrite.alias", "support.module", "entity.name.namespace"],
           "settings": {
               "foreground": "#56b6c2", // Turquesa
               "fontStyle": ""
           }
        },
        // E. FUNCIONES Y CLASES
        {
            "scope": ["entity.name.function", "support.function"],
            "settings": { "fontStyle": "", "foreground": "#61afef" }
        },
        {
            "scope": ["entity.name.type", "support.class"],
            "settings": { "fontStyle": "", "foreground": "#56b6c2" }
        }
      ]
    }
  },

  "workbench.colorTheme": "GitHub Dark",
  "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
  "workbench.iconTheme": "vscode-great-icons",
  "editor.fontWeight": "400", // Hace la letra normal más fina (Light)
  "editor.fontLigatures": true, // (Opcional) Activa ligaduras si usas Fira Code
}